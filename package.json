{
  "name": "password-saver",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "deploy": "./scripts/deploy.sh",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:setup": "prisma generate && (prisma migrate deploy || prisma db push)",
    "render-build": "npm ci && npx prisma generate && npm run build",
    "render-start": "npx prisma db push --accept-data-loss && npm start"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "bcrypt": "^5.1.1",
    "next": "15.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.0",
    "prisma": "^6.11.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
